@model IEnumerable<SportShop.Models.Product>

<div class="contianer">
    <div>
        <div >

            <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach(var item in Model)
            {
                <div class="col" >
                    <div class="card h-100">
                      <img src="~/Images/@item.ImgUrl" class="card-img-top" style="height:180px" alt="Product Image">
                      <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">@item.UnitPrice</p>
                      </div>
                      <div class="card-footer">
                        <small class="text-muted">
                                    <a class="btn" asp-action="AddToCart" asp-controller="Cart" asp-route-productId="@item.Id">Add To Cart</a>
                        </small>
                      </div>
                    </div>
                 </div>
            }
            </div>
        </div>
    </div>
</div>
